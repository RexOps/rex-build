#!/usr/bin/env perl

use strict;
use warnings;
use Cwd 'getcwd';

use Data::Dumper;

my $version = $ENV{REX_VERSION};

$ENV{"PATH"} = "$ENV{WORK_DIR}/rex/Rex-$version/bin:" . $ENV{PATH};
$ENV{"PERLLIB"} =
  "$ENV{WORK_DIR}/rex/Rex-$version/lib:" . ( exists $ENV{PERLLIB} ? $ENV{PERLLIB} : "" );
$ENV{"PERL5LIB"} =
  "$ENV{WORK_DIR}/rex/Rex-$version/lib:" . ( exists $ENV{PERL5LIB} ? $ENV{PERL5LIB} : "" );

for my $file (@ARGV) {
  my @out = `perl $ENV{WORK_DIR}/rex/Rex-$version/bin/rex -cqw -Ff $file test`;
  my @test_line;
  my $found_end = 0;
  my $p_count   = 0;

  for my $line (@out) {
    chomp $line;

    if ( $line =~ m/^(ok|not)/ ) {
      push @test_line, $line;
    }

    if ( $line =~ m/ 1 \-/ ) {
      $p_count++;
    }

    if ( $line =~ m/^1\.\./ ) {
      $found_end++;
    }
  }

  print join( "\n", @test_line );

  if ( $found_end == $p_count ) {
    print "\n1.." . scalar(@test_line) . "\n";
  }
}
